root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

ij_typescript_force_quote_style = true
ij_typescript_force_semicolon_style = false
ij_typescript_use_double_quotes = false

[*.js,*.ts]
quote_type = single

